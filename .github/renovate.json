{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>ymickler/renovate-config//github-action.json",
    "github>ymickler/renovate-config//dockerfile.json"
  ],
  "enabledManagers": ["github-actions", "dockerfile"],

  "packageRules": [
    { "matchManagers": ["dockerfile"], "automerge": true },
    { "matchManagers": ["github-actions"], "automerge": true }
  ],

  "platformAutomerge": false,
  "ignoreTests": true
}
